mixin comment(title,subtitle,text)

   .comment-wrapper
      .comment__box 
      .comment__container
         h4.comment__title #{title}
         span.comment__subtitle #{subtitle}
         p.comment__text #{text}
         button.comment__button(type="button") Reply
            svg.comment__icon(width="18", height="18")
               use(xlink:href="./img/sprite.svg#reply")